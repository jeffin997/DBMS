CREATE TABLE EB_CAL(EBNO NUMBER(5),NAME VARCHAR(20),UNIT NUMBER(5),CHARGES NUMBER(5))
DESC EB_CAL;

INSERT INTO EB_CAL VALUES(:EBNO, :NAME, :UNIT, :CHARGES);

DECLARE
CURSOR CUR IS SELECT * FROM EB_CAL;
BEGIN
FOR I IN CUR 
LOOP
IF I.UNIT<=10 THEN
UPDATE EB_CAL SET CHARGES=I.UNIT*1 WHERE
EBNO=I.EBNO;
ELSIF I.UNIT>10 AND I.UNIT<=17THEN
UPDATE EB_CAL SET CHARGES=I.UNIT*2 WHERE
EBNO =I.EBNO;
ELSE
UPDATE EB_CAL SET CHARGES=I.UNIT*3 WHERE
EBNO=I.EBNO;
END IF;
END LOOP;
END;

SELECT * FROM EB_CAL;
